<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/冷灰"
    tools:context="demo.ming.com.mingdemo.MainActivity">

    <demo.ming.com.mingdemo.M1
        android:id="@+id/main_button"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:hint="带删除的EditText"
        android:textSize="20sp"
        android:textStyle="normal"
        android:textColor="@color/黑色"
        android:background="@drawable/bk_one"
        android:textCursorDrawable="@null"/>

    <TextView
        android:id="@+id/m_t_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/m_e_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bk_one"
        android:hint="请输入内容"/>

    <Button
        android:id="@+id/m_b_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="文本框是否为空"/>
    <Button
        android:id="@+id/m_b_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="去掉头尾空格后的长度"/>
    <Button
        android:id="@+id/m_b_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="是否由数字组成"/>
    <Button
        android:id="@+id/m_b_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="省略后的文本"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/m_b_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跑马灯"/>
    </LinearLayout>

</LinearLayout>
